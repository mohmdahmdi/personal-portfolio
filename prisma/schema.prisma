generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Admin { 
  id Int @id @default(autoincrement())
  username String @unique
  password String
  accessType String
  Post Post[]
}

model Post {
  id Int @id @default(autoincrement())
  title String
  content String
  authorId Int
  author Admin @relation(fields: [authorId], references: [id])
  published Boolean @default(false)
  cretedDate DateTime @default(now())

}